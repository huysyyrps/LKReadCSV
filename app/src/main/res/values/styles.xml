<resources>
    <style name="NoAction" parent="Theme.AppCompat.Light.NoActionBar" />

    <declare-styleable name="CircleTextProgressbar">
        <attr name="in_circle_color" format="color" />
    </declare-styleable>

    <!--自定义header属性-->
    <declare-styleable name="Header">
        <attr name="header_title" format="string" />
        <attr name="header_title_left" format="string" />
        <attr name="header_title_right" format="string" />
        <attr name="header_image_left" format="reference" />
        <attr name="header_image_right" format="reference" />
        <attr name="header_iv_left_bg" format="reference" />
        <attr name="header_iv_right_bg" format="reference" />
        <attr name="header_is_title_visiable" format="boolean" />
        <attr name="header_is_left_iv_visiable" format="boolean" />
        <attr name="header_is_left_tv_visiable" format="boolean" />
        <attr name="header_is_right_tv_visiable" format="boolean" />
        <attr name="header_is_right_iv_visiable" format="boolean" />
    </declare-styleable>



    <!-- 配置dialog样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:popupBackground">@android:color/transparent </item>
        <item name="android:background">@android:color/transparent </item>
        <item name="android:windowBackground"> @android:color/transparent </item>
        <!-- <item name="android:backgroundDimEnabled">true</item> -->
    </style>

    <!--自定义TextView-->
    <style name="TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--自定义TextView-->
    <style name="KeyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--自定义EditText-->
    <style name="EditText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:maxLength">2</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--自定义横向分割线-->
    <style name="HLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/shouye</item>
    </style>


    <!--自定义radionbutton属性-->
    <style name="MainRadionButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:layout_margin">6dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#00000000</item>
    </style>


    <!--自定义linerlayout-->
    <style name="linerlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <!--ImageView-->
    <style name="ImaheView">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--自定义radiobutton-->
    <style name="RadionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:textSize">11dip</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
<!--        <item name="android:layout_marginTop">10dp</item>-->
<!--        <item name="android:layout_marginBottom">10dp</item>-->
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
<!--        <item name="android:textColor">@color/radionbutton_select</item>-->
        <item name="android:textColor">@color/whith</item>
    </style>

</resources>
